{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@environments/*":["src/environments/*"],
      "@zona/*":["src/app/modules/zona/*"],
      "@home/*":["src/app/modules/home/*"],
      "@auth/*":["src/app/modules/auth/*"],
      "@labor/*":["src/app/modules/labor/*"],
      "@shared/*":["src/app/modules/shared/*"],
      "@usuario/*":["src/app/modules/usuario/*"],
      "@schedule/*":["src/app/modules/schedule/*"],
      "@bitacora/*":["src/app/modules/bitacora/*"],
      "@reporte/*":["src/app/modules/reporte/*"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
